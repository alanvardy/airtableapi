<p id="notice"><%= notice %></p>

<h1>Connections</h1>

<table>
  <thead>
    <tr>
      <th>Sites</th>
      <th>Users</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @connections.each do |connection| %>
      <tr>
        <td><%= connection.title %></td>
        <td><%= connection.user.name %></td>
        <td><%= link_to 'Show', connection, class: 'btn btn-sm btn-outline-primary' %></td>
        <td><%= link_to 'Edit', edit_connection_path(connection), class: 'btn btn-sm btn-outline-info' %></td>
        <td><%= link_to 'Destroy', connection, method: :delete, class: 'btn btn-sm btn-outline-danger', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Connection', new_connection_path, class: 'btn btn-sm btn-outline-info' %>
