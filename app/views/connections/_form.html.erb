
<%= simple_form_for(@connection) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :site_id, collection: Site.all_cached %>
    <%= f.association :user %>
  </div>

  <div class="form-actions">
    <%= link_to 'Back', connections_path, class: 'btn btn-outline-secondary' %> <%= f.button :submit, class: 'btn btn-outline-primary float-right' %>
  </div>
<% end %>
