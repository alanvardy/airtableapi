<h1>Users</h1>
<%= link_to 'New User', new_user_path, class: 'btn btn-sm btn-outline-info my-2' %>
<div class="table-responsive">
  <table class="table  ">
    <thead>
      <tr>
        <th scope="col" class="<%=  table_large %>">Name</th>
        <th scope="col" class="<%=  table_large %>">Email</th>
        <th scope="col" class="<%=  table_large %>">Level</th>
        <th scope="col" class="<%=  table_large %>">Sites</th>

        <th scope="col" class="<%=  table_small %>"><%= icon('fas', 'user') %> User</th>
        <th scope="col" class="<%=  table_small %>"><%= icon('fas', 'key') %> Access</th>
      </tr>
    </thead>

    <tbody>

  <% @users.each do |users| %>
    <%= render 'users/list', users: users %>
  <% end %>
    </tbody>
  </table>
</div>
<br>

<%= link_to 'New User', new_user_path, class: 'btn btn-sm btn-outline-info my-2' %>
