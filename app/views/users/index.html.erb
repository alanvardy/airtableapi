<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Permission Level</th>
      <th>Sites</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.permission.title %></td>
        <td><%= pluralize(user.connections.count, 'connection') %></td>

        <td><%= link_to 'Show', user, class: 'btn btn-sm btn-outline-primary' %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-sm btn-outline-info' %></td>
        <td><%= link_to 'Destroy', user, method: :delete, class: 'btn btn-sm btn-outline-danger', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, class: 'btn btn-sm btn-outline-info' %>
