
    <h1><%= @site.fields["Name"] %></h1>
    <p><span class="badge badge-pill badge-primary"><%= @site.fields["SiteNumber"] %></span> <%= @site.fields["SiteAddress"] %>, <%= @site.fields["SiteCity"] %> <%= @site.fields["Postal Code"] %></p>
    <h2>Site Equipment:</h2>
    <table class="table table-striped table-responsive">
        <tr>
            <th class="<%=  table_large %>" scope="col">#</th>
            <th class="<%=  table_large %>" scope="col">Type</th>
            <th class="<%=  table_large %>" scope="col">Make</th>
            <th class="<%=  table_large %>" scope="col">Model</th>
            <th class="<%=  table_large %>" scope="col">Serial</th>
            <th class="<%=  table_large %>" scope="col">Attachments</th>
            <th class="<%=  table_large %>" scope="col">More</th>

            <th class="<%=  table_small %>" scope="col">#</th>
            <th class="<%=  table_small %>" scope="col">Make<br>Type</th>
            <th class="<%=  table_small %>" scope="col">Model<br>Serial</th>
            <th class="<%=  table_small %>" scope="col">Attachments</th>
        </tr>
        <% @equipment.each do |item| %>
        <tr>
            <th scope="row" class="<%=  table_large %>"><a href="/equipment/<%= item.id %>"><span class="badge badge-pill badge-info"><%= item.fields["#"] %></span></a></th>
            <td class="<%=  table_large %>"><%= item.fields["Type"] %></td>
            <td class="<%=  table_large %>"><%= item.fields["Make"] %></td>
            <td class="<%=  table_large %>"><%= item.fields["Model"] %></td>
            <td class="<%=  table_large %>"><%= item.fields["Serial"] %></td>
            <td class="<%=  table_large %>"><%= item.fields["Attachments"].count %></td>
            <td class="<%=  table_large %>"><%= link_to 'View', "/equipment/#{item.id}" %></td>

            <th scope="row" class="<%=  table_small %>">
                <a href="/equipment/<%= item.id %>">
                    <span class="badge badge-pill badge-info">
                        <%= item.fields["#"] %>
                    </span><br><%= link_to 'View', "/equipment/#{item.id}" %>
                </a>
            </th>
            <td class="<%=  table_small %>"><%= item.fields["Make"] %><br><%= item.fields["Type"] %></td>
            <td class="<%=  table_small %>"><%= item.fields["Model"] %><br><%= item.fields["Serial"] %></td>
            <td class="<%=  table_small %>"><%= item.fields["Attachments"].count %></td>
        </tr>
        <% end %>
    </table>
